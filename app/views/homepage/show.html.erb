<h1>Products</h1>

<p><%= link_to 'Add Product', new_product_path %></p>

<table>
  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <p><%= product.title %></p>
        <p><%= product.description %></p>
        <p><%= product.stock_quantity %> in stock</p>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
        <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: "Are you sure you want to delete #{product.title}?" } %></p>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
